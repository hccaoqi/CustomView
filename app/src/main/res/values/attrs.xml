        <attr name="scratch_radius" format="dimension"></attr>
        <attr name="scratch_mark_color" format="color|reference"></attr>
        <attr name="scratch_drawable" format="reference"></attr>
    </declare-styleable>

    <declare-styleable name="RoundelMenu">
        <attr name="round_menu_roundColor" format="reference|color"/>
